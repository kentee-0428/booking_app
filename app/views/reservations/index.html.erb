<div class="post-rooms">
  <h1 class="heading">予約済み一覧</h1>
  <div class="post-rooms-form">
    <table>
      <thead>
        <div class="form-colums">
          <tr>
            <th>ルーム画像</th>
            <th>ルーム名</th>
            <th>ルーム紹介</th>
            <th>人数</th>
            <th>日数</th>
            <th>合計料金</th>
            <th>開始日</th>
            <th>終了日</th>
            <th>予約確定日</th>
          <tr>
        </div>
      </thead>
      <tbody>
        <% @reservations.each do |reservation| %>
          <div class="form-items">
            <tr>
              <td>
                <%= image_tag(reservation.room.image_url, alt: "ルームイメージ画像", class: "post-rooms-img") %>
              </td>
              <td>
                <%= reservation.room.title %>
              </td>
              <td>
                <%= reservation.room.introduction %>
              </td>
              <td>
                <%= reservation.member %>
              </td>
              <td>
                <%= reservation.period %>
              </td>
              <td>
                <%= reservation.total_price %>
              </td>
              <td>
                <%= reservation.start_date.to_s(:datetime_jp) %>
              </td>
              <td>
                <%= reservation.end_date.to_s(:datetime_jp) %>
              </td>
              <td>
                <%= reservation.created_at.to_s(:datetime_jp) %>
              </td>
            </tr>
          </div>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
