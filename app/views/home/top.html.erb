<div class="top">
  <div class="top-main">
    <div class="top-container">
      <div class="form-area">
        <h1>Potepan Shareでまだ体験<br>したことのない旅をしよう</h1>
        <p>エリア</p>
        <%= search_form_for @q do |f| %>
          <%= f.search_field :address_cont, placeholder: "東京", class: "top-seach-area" %>
          <%= f.submit "探す", class: "top-seach-btn" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="areas-main">
    <div class="areas-container">
      <h1 class="section-title">おすすめエリア</h1>
      <div class="area-items">
        <div class="area-item ">
          <%= link_to controller: "rooms", action: "index", q: { address_cont: "東京" } do %>
            <%= image_tag("https://presite-potepancamp-rails-02.herokuapp.com/assets/img_tokyo.jpg", alt: "東京", class: "area-item-image") %>
          <% end %>
          <p class="place-name">東京</p>
        </div>
        <div class="area-item ">
          <%= link_to controller: "rooms", action: "index", q: { address_cont: "大阪" } do %>
            <%= image_tag("https://presite-potepancamp-rails-02.herokuapp.com/assets/img_osaka.jpg", alt: "大阪", class: "area-item-image") %>
          <% end %>
          <p class="place-name">大阪</p>
        </div>
        <div class="area-item ">
          <%= link_to controller: "rooms", action: "index", q: { address_cont: "京都" } do %>
            <%= image_tag("https://presite-potepancamp-rails-02.herokuapp.com/assets/img_kyoto.jpg", alt: "京都", class: "area-item-image") %>
          <% end %>
          <p class="place-name">京都</p>
        </div>
        <div class="area-item ">
          <%= link_to controller: "rooms", action: "index", q: { address_cont: "札幌" } do %>
            <%= image_tag("https://presite-potepancamp-rails-02.herokuapp.com/assets/img_sapporo.jpg", alt: "札幌", class: "area-item-image") %>
          <% end %>
          <p class="place-name">札幌</p>
        </div>
      </div>
    </div>
  </div>
</div>