<div class="room-container">
  <div class="room-show-left">
    <div class="room-show-from">
      <div class="room-image">
        <%= image_tag(@room.image_url, alt: "ルーム画像", class: "room-image") %>
      </div>
      <div class="room-show-profile">
        <%if current_user.image_name? %>
          <div class="room-show-user-image">
            <%= image_tag(@room.user.image_name_url, class: "image-icon") %>
          </div>
        <% else %>
          <div class="room-show-user-image">
            <%= image_tag("https://nureyon.com/sample/7/upper_body-1-p14.svg?1601332163", class: "image-icon") %>
          </div>
        <% end %>
        <div class="room-show-title-address">
          <div class="room-show-title">
            <%= @room.title %>
          </div>
          <div class="room-show-address">
            <%= @room.address %>
          </div>
        </div>
      </div>
      <div class="room-show-introduction">
        <%= @room.introduction %>
      </div>
    </div>
  </div>
  <div class="room-show-right">
    <div class="room-show-nav">
      <% if @reservation.errors.any? %>
        <div class="alert">
          <ul>
            <% @reservation.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="room-show-price">
        <p>¥<%= @room.price %>/日</p>
      </div>
      <div class="room-show-date-select">
        <%= form_with model: @reservation, local: true do |f| %>
          <div class="room-show-start-date">
            <%= f.label "開始日" %><br>
            <%= f.date_field :start_date, class: "date-select" %>
          </div>
          <div class="room-show-end-date">
            <%= f.label "終了日" %><br>
            <%= f.date_field :end_date, class: "date-select" %>
          </div>
          <div class="room-show-start-d">
            <%= f.label "人数" %><br>
            <%= f.number_field :member, class: "date-select" %>
          </div>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.submit "予約する", class: "date-select show-login-btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>